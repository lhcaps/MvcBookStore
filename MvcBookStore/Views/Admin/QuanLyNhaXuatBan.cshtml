@model IEnumerable<MvcBookStore.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Quản Lý Nhà Xuất Bản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản Lý Nhà Xuất Bản</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MaNXB)</th>
            <th>@Html.DisplayNameFor(model => model.TenNXB)</th>
            <th>@Html.DisplayNameFor(model => model.Diachi)</th>
            <th>@Html.DisplayNameFor(model => model.DienjThoai)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MaNXB)</td>
                <td>@Html.DisplayFor(modelItem => item.TenNXB)</td>
                <td>@Html.DisplayFor(modelItem => item.Diachi)</td>
                <td>@Html.DisplayFor(modelItem => item.DienjThoai)</td>
                <td>
                    @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.MaNXB }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaNXB }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
