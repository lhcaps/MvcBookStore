@model MvcBookStore.Models.NHAXUATBAN

@{
    ViewBag.Title = "Sửa Nhà Xuất Bản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Sửa Nhà Xuất Bản</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4>Nhà Xuất Bản</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Mã Nhà Xuất Bản -->
        <div class="form-group row">
            @Html.LabelFor(model => model.MaNXB, htmlAttributes: new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaNXB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Tên Nhà Xuất Bản -->
        <div class="form-group row">
            @Html.LabelFor(model => model.TenNXB, htmlAttributes: new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNXB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Địa chỉ Nhà Xuất Bản -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Diachi, htmlAttributes: new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Số điện thoại Nhà Xuất Bản -->
        <div class="form-group row">
            @Html.LabelFor(model => model.DienjThoai, htmlAttributes: new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienjThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DienjThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Lưu thông tin -->
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="text-center">
    @Html.ActionLink("Quay lại danh sách", "QuanLyNhaXuatBan", null, new { @class = "btn btn-secondary" })
</div>
