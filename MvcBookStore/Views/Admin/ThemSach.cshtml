@model MvcBookStore.Models.SACH
@{
    ViewBag.Title = "Thêm Sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">THÊM SÁCH</h2>

@using (Html.BeginForm("ThemSach", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4 class="text-center">Thông tin Sách</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Tên sách -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Tensach, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tensach, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Đơn vị tính -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Donvitinh, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Donvitinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Donvitinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Đơn giá -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Donggia, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Donggia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Donggia, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Mô tả -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Mota, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Hình minh họa -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Hinhminhoa, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                <input type="file" name="Hinhminhhoa" class="form-control" />
                @Html.ValidationMessageFor(model => model.Hinhminhoa, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Mã chủ đề -->
        <div class="form-group row">
            @Html.LabelFor(model => model.MaCD, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.DropDownList("MaCD", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaCD, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Mã NXB -->
        <div class="form-group row">
            @Html.LabelFor(model => model.MaNXB, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.DropDownList("MaNXB", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Ngày cập nhật -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Ngaycapnhat, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ngaycapnhat, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Nút Tạo -->
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Thêm Sách" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<!-- Quay lại danh sách -->
<div class="text-center mt-3">
    @Html.ActionLink("Quay lại danh sách", "Index", new { @class = "btn btn-secondary" })
</div>
