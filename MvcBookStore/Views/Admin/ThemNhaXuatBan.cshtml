@model MvcBookStore.Models.NHAXUATBAN

@{
    ViewBag.Title = "Thêm Nhà Xuất Bản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Thêm Nhà Xuất Bản</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4 class="text-center">Nhà Xuất Bản</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Mã Nhà Xuất Bản -->
        <div class="form-group row">
            @Html.LabelFor(model => model.MaNXB, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaNXB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Tên Nhà Xuất Bản -->
        <div class="form-group row">
            @Html.LabelFor(model => model.TenNXB, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNXB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Địa chỉ -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Diachi, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Số điện thoại -->
        <div class="form-group row">
            @Html.LabelFor(model => model.DienjThoai, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienjThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DienjThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Nút Submit -->
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<!-- Quay lại danh sách -->
<div class="text-center mt-3">
    @Html.ActionLink("Quay lại danh sách", "Index", new { @class = "btn btn-secondary" })
</div>
